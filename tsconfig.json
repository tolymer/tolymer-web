{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["@nuxt/vue-app", "@types/node"]
  }
}
